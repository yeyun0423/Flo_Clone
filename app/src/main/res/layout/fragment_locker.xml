<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- "보관함" 타이틀 -->
        <TextView
            android:id="@+id/lockerTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보관함"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 오른쪽 상단 카테고리 버튼 -->
        <ImageView
            android:id="@+id/lockerCategoryIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 상단 탭 메뉴 -->
        <LinearLayout
            android:id="@+id/lockerTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/lockerTitleTv">

            <TextView
                android:id="@+id/lockerTabListTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="내 리스트"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lockerTabLikeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="좋아요"
                android:textSize="14sp"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/lockerTabSavedTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="저장한 곡"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lockerTabPlayedTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="많이 들은"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 체크박스 + 전체듣기 + 편집 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <CheckBox
            android:id="@+id/selectAllCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택해제"
            android:textColor="#7F3FBF"
            android:buttonTint="#7F3FBF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/playAllTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체듣기"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginStart="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/editTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편집"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- 리스트 보여줄 프레임 -->
    <FrameLayout
        android:id="@+id/lockerContentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
