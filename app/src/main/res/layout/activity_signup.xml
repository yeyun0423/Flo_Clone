<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- FLO 로고 -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_flo_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <!-- 이메일 입력 -->
        <LinearLayout
            android:id="@+id/emailInputLayout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="아이디(이메일)"
                android:background="@null"
                android:paddingHorizontal="8dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@"
                android:textSize="14sp"
                android:layout_marginHorizontal="4dp" />

            <Spinner
                android:id="@+id/emailDomainSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/email_domain_array"
                />

        </LinearLayout>

    <!-- 비밀번호 입력 영역: EditText + 눈 아이콘 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/passwordInputContainer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/emailInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:background="@null"
            android:paddingEnd="40dp"
            android:paddingStart="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/passwordToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_input_password"
            android:contentDescription="비밀번호 보기 토글"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/passwordInput"
            app:layout_constraintBottom_toBottomOf="@id/passwordInput"
            android:layout_marginEnd="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#3D5AFE"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/passwordInputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 아이디/비밀번호 찾기 + 회원가입 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/findInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/findIdPwText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기 | 비밀번호 찾기"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 아이디로 로그인 버튼 -->
    <Button
        android:id="@+id/idLoginBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="아이디로 로그인"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/ico_20_logo_tid_white"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingStart="36dp"
        app:layout_constraintTop_toBottomOf="@id/findInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 휴대폰 번호 로그인 -->
    <Button
        android:id="@+id/phoneLoginBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:drawableStart="@android:drawable/ic_menu_call"
        android:gravity="center"
        android:paddingStart="36dp"
        android:text="휴대폰 번호 로그인"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/idLoginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 소셜 로그인 -->
    <LinearLayout
        android:id="@+id/socialLoginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/phoneLoginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/naver_44"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/kakako_44"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/apple_44"
            android:layout_marginHorizontal="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
