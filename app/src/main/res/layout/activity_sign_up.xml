<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signUpLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 제목 -->
    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이메일 입력 -->
    <LinearLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/signUpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="아이디(이메일)"
            android:background="@null"
            android:paddingHorizontal="8dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@"
            android:textSize="14sp"
            android:layout_marginHorizontal="4dp" />

        <Spinner
            android:id="@+id/emailDomainSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/email_domain_array" />
    </LinearLayout>

    <!-- 비밀번호 입력 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/passwordInputContainer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/emailInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:background="@null"
            android:paddingEnd="40dp"
            android:paddingStart="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/passwordToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_input_password"
            android:contentDescription="비밀번호 보기 토글"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/passwordInput"
            app:layout_constraintBottom_toBottomOf="@id/passwordInput" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 비밀번호 확인 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/passwordConfirmContainer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/passwordConfirmInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:background="@null"
            android:paddingEnd="40dp"
            android:paddingStart="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/passwordConfirmToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_input_password"
            android:contentDescription="비밀번호 확인 보기 토글"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/passwordConfirmInput"
            app:layout_constraintBottom_toBottomOf="@id/passwordConfirmInput" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 가입 완료 버튼 -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3C5EFF"
        android:minHeight="48dp"
        android:text="가입완료"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
